#
# Example config file for MySQL Buddy
#

## enable/disable database optimization
# :optimize: true

## MySQL instance on localhost
# :host: localhost

## access MySQL whith the user named "backup"
# :user: backup

## specify a password for the user 
# :password: 'my__secret'

## path to mysql commands
# :mysql_path:     '/usr/bin/mysql'
# :mysqldump_path: '/usr/bin/mysqldump'
# :mysqlcheck_path: '/usr/bin/mysqlcheck'

## where to store the database dump files
# :backup_path: '/var/backups/mysql'

## keep dump files fopr 30 days before deleting them
# :retention: 30

## date format for backup files
# :date_format: "%Y-%m-%d"

## select databases to include in the backup 
## default is ['all'] => :databases: ['all']
## other allowed keywords besides 'all':
##   'system' for system databases => :databases: ['system']
##   'user' for everything but system databases => :databases: ['user']
## you can also list each db you want to backup: 
# :databases: ['db-1', 'db-2', 'db3']
## this is the same with different YAML syntax   
# :databases:
#  - db-1
#  - db-2
#  - db-3

## specify a receiver for the status mail, no mail will be sent if empty
# :mail_to: admin@example.com
